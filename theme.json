{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 1,
    "customTemplates": [
        {
			"name": "index",
			"title": "Standard"
		},
		{
			"name": "page",
			"title": "Seite",
			"postTypes": [
				"page"
			]
		},
        {
			"name": "single",
			"title": "Beitrag",
			"postTypes": [
				"post"
			]
		}
	],
    "templateParts": [
		{
			"name": "header",
			"title": "Header - Standard",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}

	],
    "settings": {
        "layout": {
            "contentSize": "1920px",
            "wideSize": "1920px"
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "color": {
            "background": true,
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "duotone": [],
            "link": true,
            "text": true,
            "palette": [
				{
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                }
            ],
			"gradients": [
                {
					"name": "Neongelb zu Minzgr√ºn",
                    "slug": "yellow-neon-to-green-mint",
                    "gradient": "linear-gradient(90deg, #cff023 0%, #65e58d 100%)"
                }
            ]
        },        
        "typography": {
            "customFontSize": true,
            "dropCap": true,
            "fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
            "fontSizes": [
				{
					"name": "Huge",
                    "slug": "huge",
					"size": "clamp(2.5rem, 4vw, 3rem)"					
				},
				{
                    "name": "Large",
					"slug": "large",
					"size": "clamp(1.75rem, 3vw, 2.25rem)"					
				},
				{
                    "name": "Medium",
					"slug": "medium",
					"size": "1.25rem"					
				},
				{
                    "name": "Normal",
					"slug": "normal",
					"size": "1.125rem"					
				},
				{
                    "name": "Small",
					"slug": "small",                    
					"size": "1rem"					
				},
				{
                    "name": "Mini",
					"slug": "mini",
					"size": "0.875rem"					
				}
            
			],
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)",
            "fontSize": "1rem"
        },
        "spacing": {
            "blockGap": "20px"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "36px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "24px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "20px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "16px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "14px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "12px",
                    "textTransform": "uppercase",
                    "fontWeight": "normal"
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            }
        },
        "blocks": {
        }
    }
}